# Ignore SIGINT in this process. Only pamtester shall support this.
trap '' INT

echo "P 15"
echo "Enter password:"
read -r ptype len
case "$ptype" in
  p)
    # Trick: reading len+1 characters get the password and the terminating
    # newline - just what we need here.
    if head -c "$((len+1))" | (
        trap - INT
        exec @path_to_pamtester@ @pam_service_name@ "$USER" authenticate \
          >/dev/null 2>&1
      ); then
      echo "i 11"
      echo "I know you."
      exit 0
    else
      echo "e 17"
      echo "Invalid password."
      exit 1
    fi
    ;;
  x)
    exit 1
    ;;
  *)
    echo >&2 "Unexpected packet type."
    exit 1
    ;;
esac

# Shouldn't get here.
exit 42
